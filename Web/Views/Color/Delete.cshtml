@model Color

@{
	Layout = "_LayoutAdmin";
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />

<form method="post" asp-action="Delete">
	<input asp-for="id" hidden />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Delete Color</h2>
			<hr />
		</div>
		<div class="mb-3">
			<label asp-for="color"></label>
			<input asp-for="color" class="form-control" />
			<span asp-validation-for="color" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="hex"></label>
			<input asp-for="hex" class="form-control" />
			<span asp-validation-for="hex" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
		<a asp-controller="Color" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Back to List
		</a>
	</div>
</form>